{
  "name": "copilot-sveltekit-participant",
  "displayName": "copilot-sveltekit-participant",
  "description": "A SvelteKit context-ready participant to assist in all your coding needs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-sveltekit-participant.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "copilot-sveltekit-participant.openSvelteChat",
        "title": "Open Svelte Expert Chat"
      },
      {
        "command": "copilot-sveltekit-participant.askSvelteQuestion",
        "title": "Ask Svelte Expert a Question"
      }
    ],
    "configuration": {
      "title": "Copilot SvelteKit Participant",
      "properties": {
        "copilotSvelteKit.enableDetailedExplanations": {
          "type": "boolean",
          "default": true,
          "description": "Enable detailed explanations in responses"
        },
        "copilotSvelteKit.preferredSvelteVersion": {
          "type": "string",
          "enum": [
            "4",
            "5"
          ],
          "default": "5",
          "description": "Set your preferred Svelte version"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "webpack",
    "watch:webpack": "webpack --watch",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "prettier": "^2.8.8",
    "jest": "^29.5.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.4.2"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
